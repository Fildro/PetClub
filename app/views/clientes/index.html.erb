<p id="notice"><%= notice %></p>
 <div class="col-sm-12">
<h1>Listado de Clientes</h1>

<table class="table table-bordered table-hover table-striped">
 <div class="table-responsive">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellidos</th>
      <th>DNI</th>
      <th>Direccion</th>
      <th>Ver</th>
      <th>Editar</th>
      <th>Eliminar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nombrecli %></td>
        <td><%= cliente.appcli %></td>
        <td><%= cliente.dnicli %></td>
        <td><%= cliente.direccioncli %></td>
        <td><%= link_to 'Ver', cliente %></td>
        <td><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Eliminar', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </div>
</table>
</div>
<%=will_paginate @clientes %>
<br>
<%= link_to 'Registrar Nuevo Cliente', new_cliente_path %>

