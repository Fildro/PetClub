<p id="notice"><%= notice %></p>
 <div class="col-lg-6">
<h1>Listado de Facturas</h1>

<table class="table table-bordered table-hover table-striped">
 <div class="table-responsive">
  <thead>
    <tr>
     <th>Nro. Factura</th>
      <th>Fecha</th>
      <th>Cliente</th>
      <th>Medico</th>
      <th>Ver</th>
      <th>Editar</th>
      <th>Eliminar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facturas.each do |factura| %>
      <tr>
        <td><%= factura.id %></td>
        <td><%= factura.fecha %></td>
        <td><%= factura.cliente.nombrecli %></td>
        <td><%= factura.medico.nombrem %></td>
        <td><%= link_to 'Ver', factura %></td>
        <td><%= link_to 'Modificar', edit_factura_path(factura) %></td>
        <td><%= link_to 'Eliminar', factura, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Registrar Nueva Factura', new_factura_path %>
<br>